# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================
# These variables MUST be set for the application to function properly

# Discord OAuth Configuration (REQUIRED)
DISCORD_CLIENT_ID=your_discord_client_id # Discord application client ID for OAuth authentication
DISCORD_CLIENT_SECRET=your_discord_client_secret # Discord application client secret for OAuth authentication
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback # OAuth callback URL (change for production)

# SonoranCAD API Configuration (REQUIRED)
SONORAN_API_KEY=your_sonoran_api_key # SonoranCAD community API key (NOT personal API key)
SONORAN_COMMUNITY_ID=your_sonoran_community_id # SonoranCAD community/server ID

# =============================================================================
# RECOMMENDED ENVIRONMENT VARIABLES
# =============================================================================
# These variables are recommended for production deployment

# Discord Server Configuration (RECOMMENDED)
DISCORD_GUILD_ID=your_discord_server_id # Discord server ID for role-based access control
DISCORD_REQUIRED_ROLE_ID=your_required_role_id # Discord role ID required for authentication
DISCORD_BOT_TOKEN=your_discord_bot_token # Discord bot token for role verification

# Security Configuration (RECOMMENDED)
SESSION_SECRET=your_session_secret_key # Random string for session management (32+ characters)
COOKIE_SECRET=your_cookie_secret_key # Random string for signing cookies (different from SESSION_SECRET)


# =============================================================================
# OPTIONAL ENVIRONMENT VARIABLES
# =============================================================================
# These variables have sensible defaults but can be customized

# Server Configuration (OPTIONAL)
PORT=3000 # Port for the web server to run on
NODE_ENV=development # Environment mode: 'development' or 'production'

# CORS Configuration (OPTIONAL)
CORS_ORIGIN=http://localhost:3000 # Allowed CORS origin (change for production)

# Logging Configuration (OPTIONAL)
LOG_LEVEL=debug # Log level: 'error', 'warn', 'info', 'debug'
LOG_FORMAT=combined # Log format: 'combined', 'common', 'dev', 'short', 'tiny'
ENABLE_CONSOLE_LOGGING=true # Enable console logging (true/false)
ENABLE_FILE_LOGGING=false # Enable file logging (true/false)
LOG_FILE=logs/app.log # Path to log file (if file logging enabled)

# Redis Configuration (OPTIONAL - for caching and session storage)
REDIS_HOST=localhost # Redis server hostname
REDIS_PORT=6379 # Redis server port
REDIS_PASSWORD= # Redis server password (leave empty if no password)
REDIS_DB=0 # Redis database number (0-15)

# SQLite Configuration (OPTIONAL - for user data storage)
SQLITE_PATH=./data/database.sqlite # Path to SQLite database file
SQLITE_BACKUP_PATH=./data/backups # Path for database backups

# RabbitMQ Configuration (OPTIONAL - for real-time call processing)
RABBITMQ_URL=amqp://localhost:5672 # RabbitMQ connection URL
RABBITMQ_EXCHANGE=sonoran_calls # Exchange name for call routing
CALL_POLL_INTERVAL=15000 # Call polling interval in milliseconds (15 seconds default)


# Rate Limiting Configuration (OPTIONAL)
RATE_LIMIT_WINDOW_MS=900000 # Rate limit window in milliseconds (15 minutes default)
RATE_LIMIT_MAX_REQUESTS=100 # Maximum requests per window per IP

# Session Cookie Configuration (OPTIONAL)
SESSION_COOKIE_MAX_AGE=86400000 # Session cookie max age in milliseconds (24 hours default)
SESSION_COOKIE_SECURE=false # Use secure cookies (set to true in production with HTTPS)
SESSION_COOKIE_HTTP_ONLY=true # HTTP-only cookies (recommended: true)
SESSION_COOKIE_SAME_SITE=strict # SameSite cookie policy: 'strict', 'lax', 'none'