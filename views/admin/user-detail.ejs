<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }
        .nav-link.active {
            color: #fff !important;
            background-color: rgba(255,255,255,0.1);
            border-radius: 4px;
        }
        .user-status-active {
            color: #28a745;
        }
        .user-status-expired {
            color: #dc3545;
        }
        .table-responsive {
            max-height: 70vh;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Top Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="/admin">
                    <i class="bi bi-shield-check"></i> Admin Panel
                </a>
                
                <div class="navbar-nav me-auto">
                    <a class="nav-link" href="/admin">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a class="nav-link active" href="/admin/users">
                        <i class="bi bi-people"></i> User Management
                    </a>
                    <a class="nav-link" href="/admin/api/logs">
                        <i class="bi bi-journal-text"></i> API Logs
                    </a>
                </div>
                
                <div class="navbar-nav">
                    <span class="navbar-text me-3">
                        <i class="bi bi-person-circle"></i> <%= user.username %>
                    </span>
                    <a href="/auth/logout" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <main class="container-fluid">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><%= title %></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.reload()">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Flash messages -->
                <div id="flash-messages"></div>

                <!-- Page content -->

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">User Details</h6>
                <div class="btn-group">
                    <form method="POST" action="/admin/users/<%= targetUser.id %>/refresh-cache" style="display: inline;">
                        <button type="submit" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-arrow-clockwise"></i> Refresh Cache
                        </button>
                    </form>
                    <form method="POST" action="/admin/users/<%= targetUser.id %>/delete" style="display: inline;">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete User
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Basic Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Username:</strong></td>
                                <td><%= targetUser.username %></td>
                            </tr>
                            <tr>
                                <td><strong>Discord ID:</strong></td>
                                <td><code><%= targetUser.id %></code></td>
                            </tr>
                            <tr>
                                <td><strong>Created:</strong></td>
                                <td>
                                    <%= new Date(targetUser.createdAt * 1000).toLocaleString() %>
                                    <br>
                                    <small class="text-muted">(<%= targetUser.createdAt %>)</small>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Expires:</strong></td>
                                <td>
                                    <%= new Date(targetUser.expiryTime * 1000).toLocaleString() %>
                                    <br>
                                    <small class="text-muted">(<%= targetUser.expiryTime %>)</small>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5>Status Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Account Status:</strong></td>
                                <td>
                                    <% if (targetUser.expiryTime <= Math.floor(Date.now() / 1000)) { %>
                                        <span class="badge bg-danger">Expired</span>
                                    <% } else { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Cache Status:</strong></td>
                                <td>
                                    <% if (cachedUser) { %>
                                        <span class="badge bg-success">Cached</span>
                                    <% } else { %>
                                        <span class="badge bg-warning">Not Cached</span>
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Time Remaining:</strong></td>
                                <td>
                                    <% 
                                    const now = Math.floor(Date.now() / 1000);
                                    const timeRemaining = targetUser.expiryTime - now;
                                    if (timeRemaining > 0) {
                                        const days = Math.floor(timeRemaining / (24 * 60 * 60));
                                        const hours = Math.floor((timeRemaining % (24 * 60 * 60)) / (60 * 60));
                                        const minutes = Math.floor((timeRemaining % (60 * 60)) / 60);
                                    %>
                                        <span class="text-success">
                                            <%= days %>d <%= hours %>h <%= minutes %>m
                                        </span>
                                    <% } else { %>
                                        <span class="text-danger">Expired</span>
                                    <% } %>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- API Logs -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent API Activity</h6>
            </div>
            <div class="card-body">
                <% if (apiLogs.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead class="table-dark">
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Method</th>
                                    <th>Endpoint</th>
                                    <th>Status</th>
                                    <th>Response Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% apiLogs.forEach(log => { %>
                                    <tr>
                                        <td>
                                            <%= new Date(log.timestamp).toLocaleString() %>
                                        </td>
                                        <td>
                                            <span class="badge bg-<%= log.method === 'GET' ? 'primary' : log.method === 'POST' ? 'success' : 'warning' %>">
                                                <%= log.method %>
                                            </span>
                                        </td>
                                        <td><code><%= log.endpoint %></code></td>
                                        <td>
                                            <span class="badge bg-<%= log.status >= 200 && log.status < 300 ? 'success' : log.status >= 400 ? 'danger' : 'warning' %>">
                                                <%= log.status %>
                                            </span>
                                        </td>
                                        <td><%= log.response_time %>ms</td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="bi bi-journal-text fa-2x text-muted"></i>
                        <p class="text-muted mt-2">No API activity found for this user</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <form method="POST" action="/admin/users/<%= targetUser.id %>/refresh-cache">
                        <button type="submit" class="btn btn-outline-info">
                            <i class="bi bi-arrow-clockwise"></i> Refresh Cache
                        </button>
                    </form>
                    <a href="/admin/users" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Users
                    </a>
                    <form method="POST" action="/admin/users/<%= targetUser.id %>/delete">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete User
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- User Statistics -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Statistics</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>API Calls:</strong><br>
                    <span class="h5"><%= apiLogs.length %></span>
                    <small class="text-muted">recent calls</small>
                </div>
                
                <div class="mb-3">
                    <strong>Account Age:</strong><br>
                    <% 
                    const accountAge = Math.floor((Date.now() / 1000) - targetUser.createdAt);
                    const days = Math.floor(accountAge / (24 * 60 * 60));
                    %>
                    <span class="h5"><%= days %></span>
                    <small class="text-muted">days</small>
                </div>
                
                <div class="mb-3">
                    <strong>Last Updated:</strong><br>
                    <small class="text-muted"><%= new Date(currentTime).toLocaleString() %></small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete user <strong id="deleteUsername"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone and will remove the user from both database and cache.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete User</button>
            </div>
        </div>
    </div>
</div>

<!-- Server-side forms instead of JavaScript -->

        </main>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Handle URL parameters for flash messages
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('message');
        const messageType = urlParams.get('type') || 'info';
        
        if (message) {
            showFlashMessage(decodeURIComponent(message), messageType);
            // Clean up URL
            const newUrl = window.location.pathname;
            window.history.replaceState({}, document.title, newUrl);
        }

    </script>
</body>
</html>
